{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run my compiled binary",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/philosophers",  // Path to your binary
			"args":["1", "800", "200", "200"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,  // true if you want to run it in a separate terminal
            "MIMode": "gdb",           // or "lldb" on macOS
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
