{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug BTC",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/btc",
            "args": ["input.txt"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}